<manifest package="com.rainnka.ZHNews"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-sdk
        android:maxSdkVersion="24"/>

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".Application.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activity.HomeAct"
            android:screenOrientation="portrait"
            android:theme="@style/HomeTheme">

            <intent-filter>
                <action android:name="android.intent.action.Home"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.NewsAct"
            android:screenOrientation="portrait"
            android:theme="@style/NewsTheme">

            <intent-filter>
                <action android:name="android.intent.action.NewsActivity"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.Star_History_PraiseAct"
            android:screenOrientation="portrait"
            android:theme="@style/SHPTheme">

            <intent-filter>
                <action android:name="android.intent.action.Star_History_Praise"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.LoginAct"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize">

            <intent-filter>
                <action android:name="android.intent.action.Login"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.ProfilePageAct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.ProfilePage"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.NotificationAct"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.NotificationPage"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.FeedbackAct"
            android:screenOrientation="portrait"
            android:theme="@style/LoginTheme"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.FeedbackPage"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.AboutAct"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.AboutPage"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.Setting_DetailAct"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.Setting_Detail"/>
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".Activity.WelcomeAct"
            android:theme="@style/WelcomeTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name=".Service.InitNotiRecService">

        </service>

    </application>

</manifest>
