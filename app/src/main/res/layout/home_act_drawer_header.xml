<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              android:background="@drawable/drawer_header_bg"
              android:gravity="center_vertical"
              android:orientation="vertical"
              android:padding="20dp">

    <ImageView
        android:id="@+id/home_activity_drawer_header_login_info_profile_iv"
        android:padding="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/home_act_drawer_header_gravatar"
        android:contentDescription="gravatar"
        android:src="@mipmap/profile_light"/>

    <TextView
        android:id="@+id/home_activity_drawer_header_login_info_profile_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="点击头像登录"
        android:layout_marginLeft="5dp"
        android:textColor="#757575"
        android:textSize="16sp"/>

</LinearLayout>
