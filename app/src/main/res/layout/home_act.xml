<?xml version="1.0" encoding="utf-8"?>
<!-- root -->
<android.support.v4.widget.DrawerLayout
    android:id="@+id/homeActivity_DrawerLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.HomeAty">

    <!-- main content -->
    <include layout="@layout/home_act_content"/>

    <TextView
        android:id="@+id/home_act_netstatus_TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:gravity="center"
        android:text="无可用网络\n\n点击刷新"
        android:textSize="20sp"
        android:visibility="gone"/>

    <!-- navigationView -->
    <android.support.design.widget.NavigationView
        android:id="@+id/homeActivity_NavigationView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:scrollbars="none"
        app:headerLayout="@layout/home_act_drawer_header"
        app:menu="@menu/home_act_drawer_menu">

    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>


